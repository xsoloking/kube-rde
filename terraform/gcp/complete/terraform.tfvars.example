# GCP Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Cluster Configuration
cluster_name   = "kuberde-cluster"
machine_type   = "n1-standard-2"
min_node_count = 2
max_node_count = 10

# Domain Configuration
domain = "kuberde.example.com"
email  = "your-email@example.com"  # For Let's Encrypt certificates

# Optional: GPU Support
enable_gpu_pool     = false
gpu_type            = "nvidia-tesla-t4"
gpu_machine_type    = "n1-standard-4"
gpu_count_per_node  = 1
gpu_min_node_count  = 0
gpu_max_node_count  = 5

# Optional: Network Configuration
